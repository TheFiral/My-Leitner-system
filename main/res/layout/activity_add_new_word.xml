<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="70dp"
    android:paddingHorizontal="30dp"
    android:paddingVertical="80dp"
    tools:context=".activity.AddNewWord"
    android:background="@drawable/qwe"
    >


    <EditText
        android:id="@+id/russianTextField"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:hint="Pleas write your russian word"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="26sp"
        android:textColorHint="#000000"
        android:background="#77ffffff"
        />

    <EditText
        android:id="@+id/englishTextField"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:hint="here pleas write your english word"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="26sp"
        android:textColorHint="#000000"
        android:background="#77ffffff"/>

    <CheckBox android:id="@+id/checkbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:layout_margin="10dp"
        android:text="This is new word for you?"
        android:textSize="16sp"
        android:background="#77ffffff"/>

    <Button
        android:id="@+id/addNewWord"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:onClick="getNewWord"
        android:text="add"
        android:layout_margin="10dp"
        android:textSize="26sp"
        android:background="#77ffffff"/>

    <Button
        android:id="@+id/getBackOnMainPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:onClick="getBackOnMainPage"
        android:text="get back on main page"
        android:layout_margin="10dp"
        android:textSize="26sp"
        android:background="#77ffffff"/>


</androidx.appcompat.widget.LinearLayoutCompat>